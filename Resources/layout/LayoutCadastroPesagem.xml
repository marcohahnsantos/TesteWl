
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar"
		android:background="@android:color/background_light" />
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/main_content"
		android:layout_below="@id/toolbar"
		android:minWidth="25px"
		android:minHeight="25px"
		android:background="#ffeeeeee"
		android:contextClickable="false">
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="70dp"
			android:id="@+id/frameLayout1">
			<ImageView
				android:src="@mipmap/logosat"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/imageView1"
				android:background="@android:color/background_light"/>
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_marginTop="3dp"
			android:layout_width="match_parent"
			android:layout_height="50.5dp"
			android:id="@+id/frameLayout9">
			<DigitalClock
				android:layout_width="match_parent"
				android:id="@+id/digitalClock2"
				android:textSize="35dp"
				android:gravity="center"
				android:layout_height="50.0dp"
				android:background="#ffddceb7"
				android:layout_marginBottom="0.0dp" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="100.5dp"
			android:id="@+id/frameLayout17"
			android:background="@android:color/background_dark">
			<TextView
				android:text="PESO"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/textView1"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="450dp"
				android:gravity="center|left"
				android:textStyle="normal|bold"
				android:textSize="50dp"
				android:textColor="@android:color/background_light"
				android:background="#ff000000" />
			<TextView
				android:text="000000"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/Txtpeso"
				android:layout_marginLeft="150dp"
				android:layout_marginRight="120dp"
				android:gravity="center"
				android:textStyle="normal|bold"
				android:textSize="70dp"
				android:textColor="@android:color/background_light"
				android:background="#ff000000"
				android:layout_gravity="center"
				android:foregroundGravity="center" />
			<TextView
				android:text="Kg"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/textView1"
				android:layout_marginLeft="520dp"
				android:layout_marginRight="10dp"
				android:gravity="center|left"
				android:textStyle="normal|bold"
				android:textSize="50dp"
				android:textColor="@android:color/background_light"
				android:background="#ff000000" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:background="@android:color/background_dark"
			android:layout_width="match_parent"
			android:layout_height="5.0dp"
			android:id="@+id/frameLayout14">
			<FrameLayout
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/frameLayout16"
				android:layout_marginTop="15dp" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="60.5dp"
			android:id="@+id/frameLayout10"
			android:layout_marginBottom="1.5dp">
			<TextView
				android:text="CLIENTE"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/textView1"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="500dp"
				android:gravity="center|left"
				android:textStyle="normal|bold"
				android:textSize="20dp"
				android:textColor="@android:color/background_dark" />
			<Spinner
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/SpinnerCliente"
				android:layout_marginLeft="110dp" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="5.0dp"
			android:id="@+id/frameLayout10"
			android:layout_marginBottom="0.0dp"
			android:background="#ff01579b" >
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="60.5dp"
			android:id="@+id/frameLayout11">
			<TextView
				android:text="VEÍCULO"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/textView1"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="500dp"
				android:gravity="center|left"
				android:textStyle="normal|bold"
				android:textSize="20dp"
				android:textColor="@android:color/background_dark" />
			<Spinner
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/SpinnerVeiculo"
				android:layout_marginLeft="110dp" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:background="#ff01579b"
			android:layout_width="match_parent"
			android:layout_height="5.0dp"
			android:id="@+id/frameLayout12" />
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="60.5dp"
			android:id="@+id/frameLayout13">
			<TextView
				android:text="PRODUTO"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/textView1"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="490dp"
				android:gravity="center|left"
				android:textStyle="normal|bold"
				android:textSize="20dp"
				android:textColor="@android:color/background_dark" />
			<Spinner
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/SpinnerProduto"
				android:layout_marginLeft="110dp"
				android:gravity="clip_horizontal|start|fill" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:background="#ff01579b"
			android:layout_width="match_parent"
			android:layout_height="5.0dp"
			android:id="@+id/frameLayout14" />
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="44.5dp"
			android:id="@+id/frameLayout15">
			<TextView
				android:text="DATA                                         PLACA                                 PESO"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/textView1"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="10dp"
				android:gravity="center|left"
				android:textStyle="normal|bold"
				android:textSize="20dp"
				android:textColor="@android:color/background_dark" />
		</FrameLayout>

		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:background="#ff000000"
			android:layout_width="match_parent"
			android:layout_height="2.0dp"
			android:id="@+id/frameLayout14" />
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="270.5dp"
			android:id="@+id/frameLayout15"
			android:layout_marginBottom="0.0dp" >
			<ListView
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/ListaCadastroPesagem" />
			<ProgressBar
				android:id="@+id/list_progress"
				android:text="Aguarde"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="visible" 
				android:tooltipText="AGUARDE" />
            <TextView
                android:text="Aguarde ! "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/TxtAguardeProgress"
                android:textStyle="normal|bold"
                android:background="@android:color/transparent"
                android:textColor="@android:color/background_dark"
                android:layout_marginTop="110dp"
                android:textSize="35dp"
                android:paddingLeft="80dp"
                android:visibility="visible"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="140dp" />
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="120.0dp"
			android:id="@+id/frameLayout7"
			android:background="#ffddceb7"
			android:layout_marginTop="5.0dp"
			android:defaultFocusHighlightEnabled="false">
			<ImageButton
				android:src="@drawable/save"
				android:layout_width="match_parent"
				android:layout_height="90dp"
				android:id="@+id/BtnSalvarPesagem"
				android:layout_marginLeft="60dp"
				android:layout_marginTop="15dp"
				android:layout_marginRight="380dp"
				android:layout_marginBottom="0dp"
				android:background="@android:color/background_light"/>
			<ImageButton
				android:src="@drawable/voltar"
				android:layout_width="match_parent"
				android:layout_height="90dp"
				android:layout_marginTop="15dp"
				android:id="@+id/BtnSairPesagem"
				android:layout_marginLeft="400dp"
				android:layout_marginRight="50dp"
				android:layout_marginBottom="0dp"
				android:background="@android:color/background_light"/>
		</FrameLayout>
		<FrameLayout
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="44.5dp"
			android:id="@+id/frameLayout15">
		</FrameLayout>
	</LinearLayout>
</RelativeLayout>